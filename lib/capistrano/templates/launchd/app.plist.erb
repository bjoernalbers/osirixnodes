<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>com.osirixnodes.app</string>
  <key>EnvironmentVariables</key>
  <dict>
    <key>RAILS_ENV</key>
    <string><%= fetch(:rails_env) %></string>
    <key>SECRET_KEY_BASE</key>
    <string><%= fetch(:secret_key_base) %></string>
  </dict>
  <key>ProgramArguments</key>
  <array>
    <string>bundle</string>
    <string>exec</string>
    <string>thin</string>
    <string>--port</string>
    <string><%= fetch(:port) %></string>
    <string>--rackup</string>
    <string>config.ru</string>
    <string>start</string>
  </array>
  <key>RunAtLoad</key>
  <true/>
  <key>KeepAlive</key>
  <true/>
  <key>WorkingDirectory</key>
  <string><%= current_path %></string>
  <key>UserName</key>
  <string><%= fetch(:deploy_user) %></string>
  <key>GroupName</key>
  <string>staff</string>
</dict>
</plist>
