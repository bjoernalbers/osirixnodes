<%= form_for(@node, html: { class: 'form-horizontal' }) do |f| %>
  <% if @node.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@node.errors.count, "error") %> prohibited this node from being saved:</h2>

      <ul>
      <% @node.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='form-group'>
    <%= f.label :name, class: 'control-label col-md-2' %>
    <div class='col-md-3'>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :aetitle, class: 'control-label col-md-2' %>
    <div class='col-md-3'>
      <%= f.text_field :aetitle, class: 'form-control', placeholder: 'EXAMPLE' %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :address, class: 'control-label col-md-2' %>
    <div class='col-md-3'>
      <%= f.text_field :address, class: 'form-control', placeholder: '127.0.0.1' %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :port, class: 'control-label col-md-2' %>
    <div class='col-md-3'>
      <%= f.text_field :port, class: 'form-control', placeholder: '11112' %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :qr, class: 'control-label col-md-2' %>
    <div class='col-md-3'>
      <%= f.check_box :qr, class: 'form-control' %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :wado_port, class: 'control-label col-md-2' %>
    <div class='col-md-3'>
      <%= f.text_field :wado_port, class: 'form-control' %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :wado_transfer_syntax, class: 'control-label col-md-2' %>
    <div class='col-md-3'>
      <%= f.select :wado_transfer_syntax, Node::WADO_TRANSFER_SYNTAX.collect { |k,v| [v, k] }, {}, {class: 'form-control'} %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :retrieve_mode, class: 'control-label col-md-2' %>
    <div class='col-md-3'>
      <%= f.select :retrieve_mode, Node::RETRIEVE_MODE.collect { |k,v| [v, k] }, {}, {class: 'form-control'} %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :transfer_syntax, class: 'control-label col-md-2' %>
    <div class='col-md-3'>
      <%= f.select :transfer_syntax, Node::TRANSFER_SYNTAX.collect { |k,v| [v, k] }, {}, {class: 'form-control'} %>
    </div>
  </div>

  <%= f.submit nil, class: 'btn btn-primary' %>
<% end %>
